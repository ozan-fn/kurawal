{
    "version": 2,
    "builds": [
        {
            "src": "backend/src/server.ts",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
        },
        {
            "src": "/api/(.*)",
            "dest": "backend/src/server.ts"
        }
    ]
}
