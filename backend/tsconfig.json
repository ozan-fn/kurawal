{
    "compilerOptions": {
        "target": "ES2020", // lebih modern agar dukung import/export
        "module": "ESNext", // gunakan ESM, bukan commonjs
        "moduleResolution": "node", // pastikan resolusi modul sesuai Node
        "jsx": "preserve",
        "allowJs": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "dist"]
}
