{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "jsx": "preserve",
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "dist"]
}
