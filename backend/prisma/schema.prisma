generator client {
    provider = "prisma-client-js"
    output   = "../src/generated/prisma"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

type EnvsEnv {
    env_description String
    key             String
    optional        Boolean
    sensitive       Boolean
    value           String
}

model envs {
    id          String    @id @default(auto()) @map("_id") @db.ObjectId
    v           Int       @map("__v")
    createdAt   DateTime  @db.Date
    description String
    env         EnvsEnv[]
    link_github String
    title       String    @unique(map: "title_1")
    updatedAt   DateTime  @db.Date

    @@index([env.key], map: "env.key_1")
}

model media {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    v         Int      @map("__v")
    createdAt DateTime @db.Date
    filename  String
    publicId  String   @unique(map: "publicId_1")
    status    String
}

model posts {
    id          String   @id @default(auto()) @map("_id") @db.ObjectId
    v           Int      @map("__v")
    authorId    String   @db.ObjectId
    content     String
    createdAt   DateTime @db.Date
    description String
    link_github String
    status      String?
    tags        String[]
    tech_stack  String[]
    title       String
    type_post   String
    updatedAt   DateTime @db.Date
}

model tags {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    v         Int      @map("__v")
    createdAt DateTime @db.Date
    tag_name  String
    tag_slug  String
}

