generator client {
    provider = "prisma-client-js"
    output   = "../src/generated/prisma"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

enum MediaStatus {
    ACTIVE
    PENDING
}

model Media {
    id        String      @id @default(auto()) @map("_id") @db.ObjectId
    filename  String
    publicId  String      @unique
    status    MediaStatus @default(PENDING)
    createdAt DateTime    @default(now())
    updatedAt DateTime    @updatedAt

    // ðŸ”— Relasi ke Post (optional)
    post   Post?   @relation(fields: [postId], references: [id], onDelete: Cascade)
    postId String? @db.ObjectId
}

enum PostStatus {
    DRAFT
    PUBLISHED
    ARCHIVED
}

enum PostType {
    POST
    PROJECT
}

model Post {
    id          String     @id @default(auto()) @map("_id") @db.ObjectId
    user        User       @relation(fields: [userId], references: [id])
    userId      String
    content     String
    thumbnail   String?
    description String?
    link_github String?
    status      PostStatus @default(DRAFT)
    title       String
    type_post   PostType   @default(POST)
    createdAt   DateTime   @default(now())
    updatedAt   DateTime   @updatedAt

    medias Media[]
    tag    Tag     @relation(fields: [tagId], references: [id])
    tagId  String  @db.ObjectId
}

model Tag {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    name      String
    slug      String   @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    // ðŸ”— Reverse relation
    posts Post[]
}

model User {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    name      String
    email     String
    password  String
    image     String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    Posts Post[]

    @@unique([email])
    @@map("user")
}
